<Window
    x:Class="NGD_Project_App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NGD_Project_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Background="#2f5cb6"/>
        <Border Grid.Column ="1" Background="#1f3d7a"/>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#152951"/>

        <TextBlock x:ConnectionId='2' Grid.Row="1" Grid.Column="0" x:Name="connectionBlock" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <!--<Button Grid.Row="1" Grid.Column="1" x:Name="ResetButton" Click="ResetButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center">Reset</Button>-->

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >

            <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="InitButton" Click="InitButton_Click">InitDB</Button>
            </StackPanel>-->
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:ConnectionId='17' x:Name="InsertButton"                           >Insert</Button>
                <TextBox x:ConnectionId='18' x:Name="InsertTextBox" TextWrapping="Wrap" Width="140" Visibility="Visible" Text=" { &quot;field&quot; : &quot;value&quot; } "></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:ConnectionId='15' x:Name="FindButton"                         >Find</Button>
                <TextBox x:ConnectionId='16' x:Name="FindTextBox" TextWrapping="Wrap" Width="140" Visibility="Visible" Text=" { &quot;field&quot; : &quot;value&quot; } "></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:ConnectionId='13' x:Name="AggregateButton"                              >Aggregate</Button>
                <TextBox x:ConnectionId='14' x:Name="AggregateTextBox" TextWrapping="Wrap" Width="140" Visibility="Visible" Text=" { $match: { country: &quot;South Korea&quot; }} "></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:ConnectionId='11' x:Name="DeleteButton"                           >Delete</Button>
                <TextBox x:ConnectionId='12' x:Name="DeleteTextBox" TextWrapping="Wrap" Width="140" Visibility="Visible" Text=" { &quot;field&quot; : &quot;value&quot; } "></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:ConnectionId='8' x:Name="ReplicaUpdateButton"                                  >Replica Update</Button>
                <TextBox x:ConnectionId='9' x:Name="ToUpdateTextBox" TextWrapping="Wrap" Width="140" Visibility="Visible" Text=" { &quot;name&quot; : &quot;x&quot; } "></TextBox>
                <TextBox x:ConnectionId='10' x:Name="UpdatedTextBox" TextWrapping="Wrap" Width="140" Visibility="Visible" Text=" { &quot;value&quot; : &quot;10&quot; } "></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:ConnectionId='6' x:Name="ShardedUpdateButton"                                  >Sharded Update</Button>
                <TextBox x:ConnectionId='7' x:Name="ShardedUpdatedTextBox" TextWrapping="Wrap" Width="140" Visibility="Visible" Text=" { &quot;value&quot; : &quot;1000&quot; } "></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:ConnectionId='4' x:Name="PhantomUpdateButton"                                  >Phantom Update</Button>
                <TextBox x:ConnectionId='5' x:Name="PhantomUpdatedTextBox" TextWrapping="Wrap" Width="140" Visibility="Visible" Text=" { &quot;1000&quot; } "></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <TextBlock>Refer to the documentation for implementation and meaning</TextBlock>
            </StackPanel>

        </StackPanel>

        <TextBlock x:ConnectionId='3' Grid.Row="0" Grid.Column="1" x:Name="ResultTextBlock" TextWrapping="Wrap" Width="300" Visibility="Collapsed" VerticalAlignment="Center"></TextBlock>

    </Grid>

</Window>

